<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#ecf0f1"
    android:contextClickable="false">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"/>
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/repeatbg" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="2500dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="50sp"
                android:textColor="#ffffff"
                android:id="@+id/title"
                android:background="#111111"
                android:paddingLeft="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:layout_marginLeft="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:orientation="horizontal"
                        android:gravity="center"

                        >
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/button0"
                            android:background="@color/yellow"
                            android:clickable="false"
                            android:nestedScrollingEnabled="true" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/button1"
                            android:background="@color/red" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/button2"
                            android:background="@color/blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pieSeekBar"
                            android:progressDrawable="@drawable/progress"
                            android:thumb="@drawable/thumb_seek"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2012"
                                android:layout_gravity="start"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1982"
                                android:layout_gravity="right"
                                android:textColor="@color/black"
                                android:gravity="right"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/seekbar_info"
                            android:id="@+id/seekbar_info"/>

                    </LinearLayout>



                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_rowWeight="40"
                    android:layout_marginTop="15dp" />
                <!--<View-->
                    <!--android:layout_width="3dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@android:color/holo_red_dark"-->
                    <!--android:layout_marginLeft="20dp"/>-->
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="750dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/lineChart">

                </com.github.mikephil.charting.charts.LineChart>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"

                    >
                    <!-- To add another chart replace the type for the below one-->

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/exportLineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true" />

                    <!-- For extra content related to the above chart put it inside below lines layout-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/londonskyline"
                android:layout_gravity="bottom"
                android:layout_marginTop="50dp" />


        </LinearLayout>

    </HorizontalScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>