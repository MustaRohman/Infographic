<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"




    android:background="#ecf0f1"
    android:contextClickable="false"
    >
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/repeatbg"

        />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="2500dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="50sp"
                android:textColor="#ffffff"
                android:id="@+id/title"
                android:background="#95a5a6"

                 />
            <LinearLayout
                android:layout_width="2000dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="50dp">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="   "
                        android:id="@+id/button0"
                        android:background="#f1c40f"
                        android:onClick="checkAnimation"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:id="@+id/button1"
                        android:background="#e74c3c" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:id="@+id/button2"
                        android:background="#3498db" />


                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_rowWeight="40" />
                <!--<View-->
                    <!--android:layout_width="3dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@android:color/holo_red_dark"-->
                    <!--android:layout_marginLeft="20dp"/>-->
                <com.github.mikephil.charting.charts.BubbleChart
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp">

                </com.github.mikephil.charting.charts.BubbleChart>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"

                    >



                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/londonskyline"
                android:layout_gravity="bottom"
                android:layout_marginTop="50dp" />


        </LinearLayout>

    </HorizontalScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>