<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#ecf0f1"
    android:contextClickable="false">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"/>
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/repeatbg" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:id="@+id/title"
            android:background="#111111"
            android:paddingLeft="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:textSize="30sp"
            android:text="@string/fa_icon_areachart"
            android:background="@color/black"
            android:textColor="@color/colorAccent"
            android:gravity="right"
            android:padding="4.4dp"
            />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/horizontalScroll">
        <LinearLayout
            android:layout_width="2500dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="3000dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:layout_marginLeft="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:orientation="horizontal"
                        android:gravity="center"

                        >
                        <Button
                            android:textAllCaps="false"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="2% more than last year."
                            android:id="@+id/button0"
                            android:background="@color/yellow"
                            android:clickable="false"
                            android:nestedScrollingEnabled="true" />

                        <Button
                            android:textAllCaps="false"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="  -5% less than previous year."
                            android:id="@+id/button1"
                            android:background="@color/red" />

                        <Button
                            android:textAllCaps="false"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="1% higher than previous year."
                            android:id="@+id/button2"
                            android:background="@color/blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pieSeekBar"
                            android:progressDrawable="@drawable/progress"
                            android:thumb="@drawable/thumb_seek"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1982"
                                android:layout_gravity="start"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2012"
                                android:layout_gravity="right"
                                android:textColor="@color/black"
                                android:gravity="right"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/seekbar_info"
                            android:id="@+id/seekbar_info"/>

                    </LinearLayout>



                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="400dp"
                    android:layout_height="300dp"
                    android:layout_rowWeight="40"
                    android:layout_marginTop="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uk_last"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">



                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_width="750dp"
                            android:layout_height="280dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/lineChart">


                        </com.github.mikephil.charting.charts.LineChart>
                        <TextView
                            android:textAllCaps="false"
                            android:text="@string/lineDescrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"

                    >
                    <!-- To add another chart replace the type for the below one-->
                    <com.ecru.infographic.CircleDisplay
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/overallServ"/>
                    <com.ecru.infographic.CircleDisplay
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/overallInd"/>
                    <com.ecru.infographic.CircleDisplay
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/overallAgri"/>
                    <!-- For extra content related to the above chart put it inside below lines layout-->




                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rise"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/rise"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fall"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/fall0"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fall"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/fall1"/>


                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/risefall"/>
                <com.github.mikephil.charting.charts.LineChart
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:id="@+id/exportLineChart"
                android:layout_marginLeft="50dp"
                >

                </com.github.mikephil.charting.charts.LineChart>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:text="The graph to the left shows what percentage ICT has contributed towards the UK\'s service exports. Rising over 15% in less than 10 years. In 2014, UK ICT service exports alone were worth over $120 BILLION.
                    \nLesson is go into IT, there will always be a job for you."
                    android:id="@+id/textView" />


            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/londonskylinetiled"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp" />


        </LinearLayout>

    </HorizontalScrollView>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@drawable/repeatbg"/>
</android.support.v4.widget.DrawerLayout>